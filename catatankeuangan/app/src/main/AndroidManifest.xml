<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 1. IZIN GPS (Sudah Benar) -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logo_moku"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_moku"
        android:supportsRtl="true"
        android:theme="@style/Theme.CatatanKeuangan"
        tools:targetApi="31">

        <!-- 2. SPLASH ACTIVITY (Ini yang jadi Launcher Pertama) -->
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 3. MAIN ACTIVITY (Halaman Utama) -->
        <!-- exported="false" karena hanya dipanggil oleh Splash, bukan sistem -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <!-- 4. TAMBAH DATA ACTIVITY (Halaman Form) -->
        <!-- WAJIB ADA agar tidak crash saat tombol tambah diklik -->
        <activity
            android:name=".TambahDataActivity"
            android:exported="false" />

        <service
            android:name=".MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

    </application>

</manifest>