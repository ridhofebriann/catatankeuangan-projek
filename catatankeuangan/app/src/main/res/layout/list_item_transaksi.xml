<?xml version="1.0" encoding="utf-8"?>
<!-- Gunakan MaterialCardView agar bisa pakai STROKE (Garis Tepi) -->
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="30dp"
    app:strokeColor="#BDBDBD"
    app:strokeWidth="1dp"
    app:cardElevation="0dp">

    <!-- Layout Horizontal untuk isi kartu -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- 1. IKON PANAH (Naik/Turun) -->
        <ImageView
            android:id="@+id/img_arrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_down" />

        <!-- 2. TEKS KETERANGAN & TANGGAL -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_keterangan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gulzar"
                android:text="Uang jajan"
                android:textColor="#212121"
                android:textSize="16sp" />

        </LinearLayout>

        <!-- 3. TEKS JUMLAH -->
        <TextView
            android:id="@+id/tv_jumlah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gulzar"
            android:text="-Rp20.000"
            android:textColor="#F44336"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>